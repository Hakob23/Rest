<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KushtPorMobile.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Username"/>
            <Entry x:Name="username" Text="{Binding Username}"/>
            <Label Text="Email"/>
            <Entry x:Name="email" Text="{Binding Email}"/>
            <Label Text="Password"/>
            <Entry x:Name="password" Text="{Binding Password}"/>
            <Button Text="Login" Command="{Binding SubmitCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>